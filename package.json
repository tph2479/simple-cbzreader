{
  "name": "simple-cbzreader",
  "version": "0.0.1",
  "private": true,
  "description": "barebone cbzreader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --x64"
  },
  "keywords": [],
  "author": "tph",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "yauzl": "^3.2.0"
  },
  "icon": "icon.ico",
  "build": {
    "appId": "me.local.cbzreader",
    "compression": "maximum",
    "asar": true,
    "win": {
      "target": "dir",
      "artifactName": "${name}-${version}-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "requestExecutionLevel": "user"
    },
    "files": [
      "icon.ico",
      "main.js",
      "index.html",
      "render.js",
      "node_modules/yauzl/**/*"
    ],
    "extraFiles": [
      "register.bat",
      "unregister.bat"
    ]
  }
}